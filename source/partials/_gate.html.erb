<div class="gate">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <img class="full-w" src="https://s3.amazonaws.com/myfangate.com/demilovato/gatelogo.jpg">
      </div>
    </div>
  </div>
  <!-- AGE GATE -->
  <form id="age-gate" class="form-horizontal" onsubmit="return validateAge()" method="post">
    <h2>ENTER YOUR BIRTHDAY</h2>
    <input type="text" class="age form-control mobiscroll" name="age" id="age"/><br>
    <input type="submit" class="btn btn-primary" id="age-gate-submit">
  </form>
  <!-- CODE WORD GATE -->
  <form id="code-gate" class="form-horizontal hider" onsubmit="return validateCode()" method="post">
    <h2>ENTER THE CODEWORD</h2>
    <input type="text" class="age form-control" name="code" id="code"/>
    <b>HINT: Watch Disney Channel to get the codeword!</b>
    <br><br>
    <input type="submit" class="btn btn-primary" id="age-gate-submit">
  </form>
  <br>
  <a style="color:white;" href="http://www.radiodisneyapp.com/rules/demilovatorules.pdf" target="_blank">Official Rules</a>
</div>

